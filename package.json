{
  "name": "vistar-dcm-middleware",
  "version": "0.1.0-alpha",
  "description": "Middleware server for integrating Vistar Media with MEDIAEDGE Display Content Manager",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "prepare": "husky install",
    "docker:build": "docker build -t vistar-dcm-middleware .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "cache:warmup": "node scripts/cache-warmup.js",
    "cache:clear": "node scripts/cache-clear.js"
  },
  "keywords": [
    "vistar",
    "mediaedge",
    "dcm",
    "dooh",
    "programmatic",
    "advertising",
    "digital-signage"
  ],
  "author": "Yoshihiko Miyaichi <yoshihiko.miyaichi@pier1.co.jp>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/miyaichi/vistar-dcm-middleware.git"
  },
  "bugs": {
    "url": "https://github.com/miyaichi/vistar-dcm-middleware/issues"
  },
  "homepage": "https://github.com/miyaichi/vistar-dcm-middleware#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
